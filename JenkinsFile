pipeline {
    agent { label 'ubuntu' }

    stages {
        stage("Installing Dependencies"){
            steps {
                sh 'chmod +x ./install-maven.sh'
                sh './install-maven.sh'
            }
        }   
        stage('Build') {
            steps {
                sh 'maven compile'
                sh 'maven package'
                sh 'maven install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh 'java -cp target/jb-hello-world-maven-0.1.0.jar hello.HelloWorld'
            }
        }
    }
}
