    agent { label 'ubuntu' }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo "Hello world!"
                sh "whoami"
                sh "pwd
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
